{% extends 'frontend/base/base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Your Cart</h1>
        {% if cart.items.count > 0 %}
            {{ form_start(form) }}
                <div class="row mt-4">
                        {% include 'include/cart-items.html.twig' %}
                    <div class="col-md-8"></div>
                </div>
            {{ form_widget(form.paymentMethod) }}
            {{ form_widget(form.deliveryMethod) }}
            {{ form_end(form, {'render_rest': true}) }}
            <div class="col-md-4"></div>
            <div class="col-md-4">
                {% include 'include/cart-summary.html.twig' %}
            </div>
        {% else %}
            <div class="alert alert-info">
                Your cart is empty.
            </div>
        {% endif %}
    </div>
{% endblock %}